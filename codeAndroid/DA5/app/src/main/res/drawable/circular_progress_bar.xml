<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="10.0"
        android:useLevel="false">

        <size
            android:height="16dp"
            android:width="16dp" />

        <gradient
            android:centerColor="#66EE6C"
            android:endColor="#16771A"
            android:startColor="#BEF1C1"
            android:type="sweep" />
    </shape>
</rotate>