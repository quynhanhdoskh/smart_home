<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name = "colorPrimary">@color/design_default_color_primary</item>
        <item name = "colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name = "colorAccent">@color/purple_200</item>
        <item name="android:progressBarStyleHorizontal"> @style/CircularProgressBar</item>
    </style>

    <style name="CircularProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:maxHeight">200dp</item>
    </style>
</resources>